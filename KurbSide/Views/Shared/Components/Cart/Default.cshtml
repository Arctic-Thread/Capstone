@model Cart
<div class="col-sm-3">
    <div class="card">
        @if (Model != null)
        {
            <div class="card-header">
                <span>@Model.Business.BusinessName Cart</span>
            </div>

            <ul class="list-group">
                @foreach (var item in Model.CartItem)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0">
                        @item.Item.ItemName
                        <span class="badge badge-pill badge-dark">@item.Quantity</span>
                    </li>
                }
            </ul>
            <div class="card-footer d-flex">
                <div class="btn-group btn-group-sm w-100">
                    <a asp-controller="Order" asp-action="Checkout" class="btn btn-sm btn-outline-primary w-100">Checkout</a>
                    <a onclick="return confirm('Are you sure you want to clear your cart?')" asp-controller="Order" asp-action="CartClear" class="btn btn-sm btn-outline-danger w-50">Clear</a>
                </div>
            </div>
        }
        else
        {
            <div class="card-header">
            </div>
            <ul class="list-group">
                <li class="list-group-item border-0">
                    Your Cart Is Empty
                    <br />
                    <small><a asp-controller="Store" asp-action="Index">Select a store and add some products</a></small>
                </li>
            </ul>
            <div class="card-footer d-flex">
                <div class="btn-group btn-group-sm w-100">
                    <a href="#" class="btn btn-sm btn-outline-primary disabled w-100">Checkout</a>
                    <a href="#" class="btn btn-sm btn-outline-danger disabled w-50">Clear</a>
                </div>
            </div>
        }
    </div>
</div>