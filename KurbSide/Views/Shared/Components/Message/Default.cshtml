@if (TempData["sysMessage"] != null)
{
    var statusMessageClass = TempData["sysMessage"].ToString().StartsWith("Error") ? "danger" : "success";
    statusMessageClass = TempData["sysMessage"].ToString().StartsWith("Denied") ? "warning" : statusMessageClass;
    <div id="sysMessage" class="alert alert-@statusMessageClass alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @TempData["sysMessage"]
        @(TempData["sysMessage"] =null)
    </div>
}