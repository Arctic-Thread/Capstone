@model KurbSide.Models.Sale

@{
    ViewData["Title"] = "EditSale";
}

<h1>EditSale</h1>

<h4>Sale</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Business" asp-action="EditSale" method="post" asp-route-businessId="@Model.BusinessId">
