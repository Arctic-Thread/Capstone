<br />

<form method="post" asp-controller="business" asp-action="addItem" asp-route-id="@Model.BusinessId">
    <input hidden type="text" asp-for="BusinessId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="container container-fluid">
        <div class="row">
            <div class="col">

                <div class="form-group">
                    <label asp-for="ItemName" class=""></label>
                    <input type="text" asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class=""></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" asp-for="Price" class="form-control" step="0.01" />
                    </div>
                    <span asp-validation-for="Price"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Details" class=""></label>
                    <textarea asp-for="Details" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Details"></span>
                </div>

            </div>

            <div class="col">

                <div class="form-group">
                    <label asp-for="Category" class=""></label>
                    <input type="text" asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Sku" class=""></label>
                    <input type="text" asp-for="Sku" class="form-control" />
                    <span asp-validation-for="Sku"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Upc" class=""></label>
                    <input type="text" asp-for="Upc" class="form-control" />
                    <span asp-validation-for="Upc"></span>
                </div>

                @*<div class="form-group">
                        <label asp-for="ImageLocation" class=""></label>
                        <input type="text" asp-for="ImageLocation" class="form-control" placeholder="FUTURE USE" disabled />
                        <span asp-validation-for="ImageLocation"></span>
                    </div>*@

            </div>

        </div>
        <div class="row justify-content-between">
            <button class="btn btn-sm btn-success btn-block" type="submit" id="catalogue-SubmitItem">Add Item</button>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}